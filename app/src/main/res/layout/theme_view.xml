<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingVertical="16dp"
    android:paddingHorizontal="10dp"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/deepSkyBlueTheme"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/circle_icon"
            app:tint="@color/deep_sky_blue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/brownTheme"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/brownTheme"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/circle_icon"
            app:tint="@color/cool_brown"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/deepSkyBlueTheme"
            app:layout_constraintRight_toLeftOf="@id/yellowTheme"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/yellowTheme"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/circle_icon"
            app:tint="@color/cool_yellow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/brownTheme"
            app:layout_constraintRight_toLeftOf="@id/purpleTheme"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/purpleTheme"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/circle_icon"
            app:tint="@color/cool_purple"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/yellowTheme"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/pinkTheme"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/circle_icon"
            app:tint="@color/cool_pink"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/darkBlackTheme"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/darkBlackTheme"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/circle_icon"
            app:tint="@color/cool_light_gray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/pinkTheme"
            app:layout_constraintRight_toLeftOf="@id/darkPurpleTheme"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/darkPurpleTheme"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/circle_icon"
            app:tint="@color/cool_dark_purple"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/darkBlackTheme"
            app:layout_constraintRight_toLeftOf="@id/blackTheme"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/blackTheme"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/circle_icon"
            app:tint="@color/cool_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/darkPurpleTheme"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/blueBlackTheme"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/blue_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/brownBlackTheme"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/brownBlackTheme"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/brown_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/blueBlackTheme"
            app:layout_constraintRight_toLeftOf="@id/yellowBlackTheme"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/yellowBlackTheme"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/yellow_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/brownBlackTheme"
            app:layout_constraintRight_toLeftOf="@id/pinkBlackTheme"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/pinkBlackTheme"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/pink_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/yellowBlackTheme"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>